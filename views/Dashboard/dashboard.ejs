<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Latest compiled and minified CSS -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <title>Books</title>
  </head>
  <body>
    <div class="container">
        <h1>Old Books</h1>
      <div>
        <nav class="navbar navbar-expand-sm bg-light">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link text-primary" href="/home">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-primary" href="/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-primary" href="/addbook">Add Books</a>
            </li>
          </ul>
        </nav>
      </div>

      <!--  -->

      <div class="mt-2">
        <h1>My Books</h1>
        <% if(temp.length == 0) { %>
            <h5 class="text-danger">No record found!</h5>
        <% } else { %>

            <table class="table">
              <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Book Title</th>
                  <th scope="col">Category</th>
                  <th scope="col"> </th>
                  <th scope="col"> </th>
                </tr>
              </thead>

             
              <tbody>

                <% temp.forEach((item) => { %>
                  <tr>
                    <td><%= counter++ %></td>
                    <td class="text-primary"><%= item.title %></td>
                    <td><%= item.category %></td>
                    <td><a href="/editbook/<%= item.bookid %>" class="btn btn-primary">Edit</a></td>
                    <td> 
                      <form action="/delete/<%= item.bookid %>?_method=DELETE" 
                        method="POST">
                        <button type="submit" class="btn btn-danger">Delete</button>
                      </form>
                    </td>
                  </tr>

                <% }) %>

                
              </tbody>
          
            </table>

        <% } %>

        
         
      </div>
       

       
    </div>
  </body>
</html>
